.testimonial-list {
  margin-top: 2rem;
  width: 40%;
  padding-bottom: 4rem;
  /* display: grid; */
  /* grid-template-columns: 1fr 1fr 1fr; */
  /* gap: 2rem; */
}

.testimonial {
  display: flex;
  gap: 1rem;
}

.client__avatar {
  flex-shrink: 0;
  position: relative;
  width: 8rem;
  height: 8rem;
}

.client__avatar img {
  display: block;
  border-radius: 50%;
}

.client__flag  {
  position: absolute;
  width: 2rem;
  height: 1.5rem;
  border: 2px solid var(--color-bg);
  /* line-height: 2rem; */
  border-radius: 0.4rem;
  right: .4rem;
  bottom: .4rem;
  overflow: hidden;
}

.client__flag span {
  line-height: 1.5rem;
  font-size: 1.5rem;
}

.client__content h3 {
  user-select: none;
}

.client__content p {
  user-select: none;
  font-style: italic;
  font-weight: 300;
}
